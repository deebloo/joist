{
  "name": "lit-kit",
  "version": "0.0.0",
  "description": "A set of packages that leverage lit-html to help you write applications with web components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deebloo/lit-kit.git"
  },
  "author": "deebloo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deebloo/lit-kit/issues"
  },
  "scripts": {
    "install": "lerna run build --scope @lit-kit/*"
  },
  "dependencies": {
    "@lit-kit/component": "file:packages/component",
    "@lit-kit/di": "file:packages/di",
    "@lit-kit/schematics": "file:packages/schematics"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@types/jasmine": "3.4.6",
    "@types/node": "8.10.59",
    "clean-webpack-plugin": "3.0.0",
    "compression-webpack-plugin": "3.0.0",
    "copy-webpack-plugin": "5.0.5",
    "html-webpack-plugin": "3.2.0",
    "husky": "3.1.0",
    "jasmine": "3.5.0",
    "jasmine-core": "3.5.0",
    "karma": "4.4.1",
    "karma-chrome-launcher": "3.1.0",
    "karma-cli": "2.0.0",
    "karma-jasmine": "2.0.1",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "4.0.2",
    "lerna": "3.18.4",
    "lint-staged": "9.4.3",
    "lit-html": "1.1.2",
    "prettier": "1.19.1",
    "puppeteer": "2.0.0",
    "ts-loader": "6.2.1",
    "ts-node": "8.5.2",
    "typescript": "3.7.2",
    "webpack": "4.41.2",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "3.9.0",
    "workbox-webpack-plugin": "4.3.1"
  },
  "lint-staged": {
    "*.{js,ts,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
