{
  "name": "lit-kit",
  "version": "0.0.0",
  "description": "A set of packages that leverage lit-html to help you write applications with web components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deebloo/lit-kit.git"
  },
  "scripts": {
    "postinstall": "lerna exec npm install",
    "test": "lerna run test --stream",
    "build": "lerna run build --stream",
    "publish": "lerna publish --force-publish=*"
  },
  "author": "deebloo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deebloo/lit-kit/issues"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "husky": "3.0.9",
    "lerna": "3.18.4",
    "lint-staged": "9.4.2",
    "prettier": "1.19.1",
    "ts-node": "8.5.0"
  },
  "lint-staged": {
    "*.{js,ts,json,css,md,html}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
