{
  "name": "joist",
  "version": "0.0.0",
  "description": "A set of packages that leverage lit-html to help you write applications with web components",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deebloo/joist.git"
  },
  "author": "deebloo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deebloo/joist/issues"
  },
  "scripts": {
    "install": "npm run build-libs",
    "build-libs": "lerna run build --scope @joist/*",
    "test-libs": "lerna run test --scope @joist/*"
  },
  "dependencies": {
    "@joist/component": "file:packages/component",
    "@joist/di": "file:packages/di",
    "@joist/router": "file:packages/router"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@commitlint/config-conventional": "9.1.1",
    "@types/jasmine": "3.5.11",
    "@types/node": "8.10.61",
    "husky": "4.2.5",
    "jasmine": "3.5.0",
    "jasmine-core": "3.6.0",
    "karma": "5.1.0",
    "karma-chrome-launcher": "3.1.0",
    "karma-cli": "2.0.0",
    "karma-jasmine": "3.3.1",
    "karma-spec-reporter": "0.0.32",
    "karma-webpack": "4.0.2",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "lit-html": "1.2.1",
    "path-to-regexp": "6.1.0",
    "prettier": "2.0.5",
    "puppeteer": "5.2.1",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "tsconfig-paths-webpack-plugin": "3.2.0",
    "tslib": "2.0.0",
    "typescript": "3.9.5",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.0",
    "workbox-webpack-plugin": "5.1.3"
  },
  "lint-staged": {
    "*.{js,ts,json,css,md,html}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
